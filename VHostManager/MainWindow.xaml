<Window x:Class="VHostManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:chartingToolkit="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit"
        Title="VHostManager" Height="350" Width="525">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_Plik">
                    <MenuItem Header="_Wczytaj" Click="wczytaj_btn_click"/>
                    <MenuItem Header="_Zapisz" Click="zapisz_btn_click"/>
                </MenuItem>
                <MenuItem Header="_Padania">
                    <MenuItem Header="_Rozpocznij Badania" Click="dane_ip_btn_click"/>
                </MenuItem>
            </Menu>
            <StackPanel>
                <TextBlock x:Name="TxtResult"></TextBlock>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
